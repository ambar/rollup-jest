{
  "name": "rollup-jest",
  "version": "3.0.0",
  "description": "Rollup preprocessor for Jest",
  "repository": "ambar/rollup-jest",
  "license": "MIT",
  "engines": {
    "node": ">=12.0"
  },
  "main": "transform.js",
  "scripts": {
    "prepare": "npm test",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch --notify"
  },
  "keywords": [
    "jest",
    "rollup",
    "testing"
  ],
  "files": [
    "cli.js",
    "jest-preset.js",
    "transform.js"
  ],
  "jest": {
    "preset": "./jest-preset",
    "coveragePathIgnorePatterns": [
      "test"
    ]
  },
  "dependencies": {
    "concat-merge": "^1.0.2"
  },
  "peerDependencies": {
    "rollup": "^2.3.0 || ^3"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "jest": "^28.1.0",
    "noop3": "^1000.0.0",
    "rollup": "^3.2.3"
  }
}
